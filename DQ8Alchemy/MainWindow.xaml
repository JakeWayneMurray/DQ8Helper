<Window x:Class="DQ8Alchemy.MainWindow"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQ8Alchemy"
        mc:Ignorable="d"
        Title="Dragon Quest 8 Alchemy" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Orientation="Horizontal">

        <StackPanel Orientation="Vertical" Width="750">
            <StackPanel Orientation="Vertical">
                <!--PAGE-->
                <Frame x:Name="Main" NavigationUIVisibility="Hidden" Height="410" Margin="10"/>
                
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Width="50">
            <Button x:Name="RecipesButton" Width="40" Margin="5" Height="40" Click="RecipesButton_Click" >I</Button>
            <Button x:Name="MonstersButton" Width="40" Margin="5" Height="40" Click="MonstersButton_Click">M</Button>

        </StackPanel>
    </StackPanel>
</Window>
